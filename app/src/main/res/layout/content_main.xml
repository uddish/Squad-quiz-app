<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.uddishverma.quiz_app.Activities.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/level_one"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:id="@+id/img_one"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:src="@drawable/tick_icon"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:text="LEVEL 1"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/level_size_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/prog_bar_1"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="7/10" />

                <ProgressBar
                    android:id="@+id/prog_bar_1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="6dp"
                    android:progress="2"
                    android:progressDrawable="@drawable/blue_progressbar" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/level_two"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_two"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:src="@drawable/lock_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:text="LEVEL 2"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/level_size_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/prog_bar_2"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="7/10" />

                <ProgressBar
                    android:id="@+id/prog_bar_2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="5dp"
                    android:progress="2"
                    android:progressDrawable="@drawable/blue_progressbar" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/level_three"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_three"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:src="@drawable/lock_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:text="LEVEL 3"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/level_size_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/prog_bar_3"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="7/10" />

                <ProgressBar
                    android:id="@+id/prog_bar_3"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="5dp"
                    android:progress="2"
                    android:progressDrawable="@drawable/blue_progressbar" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/level_four"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_four"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:src="@drawable/lock_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:text="LEVEL 4"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/level_size_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/prog_bar_4"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="7/10" />

                <ProgressBar
                    android:id="@+id/prog_bar_4"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="5dp"
                    android:progress="2"
                    android:progressDrawable="@drawable/blue_progressbar" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/level_five"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_five"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:src="@drawable/lock_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:text="LEVEL 5"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/level_size_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/prog_bar_5"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="7/10" />

                <ProgressBar
                    android:id="@+id/prog_bar_5"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="5dp"
                    android:progress="2"
                    android:progressDrawable="@drawable/blue_progressbar" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>
